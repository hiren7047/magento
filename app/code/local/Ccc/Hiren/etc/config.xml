<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ccc_Hiren>
			<version>0.0.3</version>
		</Ccc_Hiren>
	</modules>
	<global>
		<blocks>
			<hiren>
				<class>Ccc_Hiren_Block</class>
			</hiren>
		</blocks>
		<helpers>
			<hiren>
				<class>Ccc_Hiren_Helper</class>
			</hiren>
		</helpers>
		<models>
			<hiren>
				<class>Ccc_Hiren_Model</class>
				<resourceModel>hiren_resource</resourceModel>
			</hiren>
			<hiren_resource>
				<class>Ccc_Hiren_Model_Resource</class>
				<entities>
	                <hiren>
	                    <table>hiren</table>
	                </hiren>
	                <hiren_datetime>
	                	<table>hiren_datetime</table>
		            </hiren_datetime>
		            <hiren_decimal>
		                <table>hiren_decimal</table>
		            </hiren_decimal>
		            <hiren_int>
		                <table>hiren_int</table>
		            </hiren_int>
		            <hiren_text>
		                <table>hiren_text</table>
		            </hiren_text>
		            <hiren_varchar>
		                <table>hiren_varchar</table>
		            </hiren_varchar>
		            <hiren_char>
		                <table>hiren_char</table>
		            </hiren_char>
		            <eav_attribute>
                        <table>hiren_eav_attribute</table>
                    </eav_attribute>
		        </entities>
			</hiren_resource>
		</models>
		<resources>
			<hiren_setup>
				<setup>
					<module>Ccc_Hiren</module>
					<class>Ccc_Hiren_Model_Resource_Setup</class>
				</setup>
			</hiren_setup>
		</resources>
	</global>
	<adminhtml>
		<menu>
			<hiren>
				<title>Hiren</title>
				<sort_order>120</sort_order>
				<children>
					<hiren>
						<title>Manage Hiren</title>
						<sort_order>100</sort_order>
						<action>hiren/Adminhtml_Hiren</action>
					</hiren>
					<hiren_attribute>
						<title>Manage Attribute</title>
						<sort_order>100</sort_order>
						<action>hiren/Adminhtml_Hiren_Attribute</action>
					</hiren_attribute>
					<hiren_set>
						<title>Manage Attribute set</title>
						<sort_order>100</sort_order>
						<action>hiren/Adminhtml_Hiren_Set</action>
					</hiren_set>
				</children>
			</hiren>
		</menu>
		<layout>
			<updates>
				<hiren>
					<file>hiren.xml</file>
				</hiren>
			</updates>
		</layout>
	</adminhtml>
	<admin>
		<routers>
			<hiren>
				<use>admin</use>
				<args>
					<module>Ccc_Hiren</module>
					<frontName>hiren</frontName>
				</args>
			</hiren>
		</routers>
	</admin>
</config>